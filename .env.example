# ================================
# RÃ¡pido Sur - Environment Variables
# ================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git

# ================================
# Application
# ================================
NODE_ENV=development
PORT=3000

# ================================
# Database (PostgreSQL)
# ================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres123
DB_DATABASE=rapido_sur

# ================================
# JWT Authentication
# ================================
# WARNING: In production, you MUST change JWT_SECRET to a secure value:
#   - At least 64 characters long
#   - Random, cryptographically secure string
#   - Do NOT use the default value below
# Generate with: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=dev_secret_key_change_in_production_ONLY_FOR_DEV_12345678901234567890
JWT_EXPIRATION=24h

# ================================
# CORS Configuration
# ================================
FRONTEND_URL=http://localhost:8080

# ================================
# Email Configuration
# ================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@rapidosur.cl

# ================================
# Maintenance Alerts
# ================================
MAINTENANCE_MANAGER_EMAIL=manager@rapidosur.cl
ENABLE_CRON=true
ALERTS_CRON_SCHEDULE=0 6 * * *

# ================================
# Seeding (Set to true only on first run)
# ================================
ENABLE_SEEDING=false

# ================================
# Logging
# ================================
LOG_LEVEL=info

# ================================
# Rate Limiting
# ================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# ================================
# Frontend (Next.js)
# ================================
NEXT_PUBLIC_API_URL=http://localhost:3000/api
